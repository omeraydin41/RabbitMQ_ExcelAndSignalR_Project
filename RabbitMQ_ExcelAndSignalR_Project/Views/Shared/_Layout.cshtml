<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RabbitMQ Excel Project</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RabbitMQ_ExcelAndSignalR_Project.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --light-bg: #ecf0f1;
            --dark-text: #2c3e50;
            --border-radius: 8px;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar Styles */
        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 1rem 0;
            border-bottom: none !important;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transition: var(--transition);
        }

        .navbar-brand:hover {
            transform: translateY(-2px);
            filter: brightness(1.2);
        }

        .nav-link {
            font-weight: 500;
            color: var(--dark-text) !important;
            position: relative;
            padding: 0.5rem 1rem !important;
            transition: var(--transition);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--secondary-color), var(--accent-color));
            transition: var(--transition);
            transform: translateX(-50%);
            border-radius: 2px;
        }

        .nav-link:hover::after {
            width: 80%;
        }

        .nav-link:hover {
            color: var(--secondary-color) !important;
            transform: translateY(-2px);
        }

        /* User Info Badge */
        .user-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: 50px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            animation: slideInRight 0.5s ease;
        }

        .user-badge::before {
            content: '👤';
            font-size: 1.2rem;
        }

        /* Container */
        .container {
            flex: 1;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        main {
            background: white;
            border-radius: var(--border-radius);
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 0.6s ease;
        }

        /* Footer */
        .footer {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem 0;
            margin-top: auto;
            border-top: none !important;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
        }

        .footer .container {
            margin: 0 auto;
            text-align: center;
            color: var(--dark-text);
        }

        .footer a {
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .footer a:hover {
            color: var(--accent-color);
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.1rem;
            }

            main {
                padding: 1.5rem;
            }

            .user-badge {
                margin-top: 1rem;
                font-size: 0.9rem;
            }
        }

        /* Login Button Style */
        .nav-item .nav-link[href*="Login"] {
            background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
            color: white !important;
            border-radius: 50px;
            padding: 0.5rem 1.5rem !important;
            margin-left: 0.5rem;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }

        .nav-item .nav-link[href*="Login"]:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
        }

        .nav-item .nav-link[href*="Login"]::after {
            display: none;
        }

        /* Active nav item */
        .nav-item .active {
            color: var(--secondary-color) !important;
            font-weight: 600;
        }

        /* Navbar toggler custom color */
        .navbar-toggler {
            border: 2px solid var(--secondary-color);
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🐰 RabbitMQ Excel Project
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (!Context.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                            </li>
                        }
                    </ul>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <span class="user-badge">@Context.User.Identity.Name</span>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 RabbitMQ Excel Project • <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-signals/1.0.0/js-signals.min.js" 
    integrity="sha512-ijOBjYzQBf0Nl9+yA2fkdgBSUQBs9+Jn7V8Rw6eflJZY6cKfKkt7W0vuLpGsnVqJaFYJEwcZWUxA1YLS1EN03g=="
    crossorigin="anonymous" referrerpolicy="no-referrer">
    </script>

    <script>
        $(document).ready(function () {
            // Sayfa tamamen yüklendiğinde çalışır

            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/MyHub") // SignalR Hub adresi belirlenir
                .build(); // Hub bağlantısı oluşturulur

            start(); // SignalR bağlantısını başlatan fonksiyon çağrılır

            function start() {
                // SignalR bağlantısını başlatan fonksiyon

                connection.start() // Hub ile bağlantı kurmayı dener
                    .then() // Bağlantı başarılıysa bir şey yapma (boş)
                    .catch((err) => {
                        // Bağlantı başarısız olursa burası çalışır

                        console.log(err); // Hata konsola yazdırılır

                        setTimeout(() => start(), 2000);
                        // 2 saniye sonra tekrar bağlantı kurmayı dener (retry mekanizması)
                    })
            }

            connection.on("CompletedFile", () => {
                // Server tarafından "CompletedFile" eventi tetiklendiğinde çalışır

                console.log("excel oluşturma bitti");
                // Excel oluşturma işleminin bittiği bilgisi loglanır

                Swal.fire({
                    position: 'top-end', // Bildirim ekranın sağ üstünde gösterilir
                    icon: 'success', // Bildirim tipi başarı
                    title: 'Excel dosyanız hazır', // Bildirim başlığı
                    showConfirmButton: true, // Onay butonu gösterilir
                    confirmButtonText: "Dosyalarım" // Onay butonunun yazısı
                }).then((result) => {
                    // Kullanıcı bildirime tıkladığında çalışır

                    if (result.isConfirmed) {
                        // Kullanıcı onay butonuna bastıysa

                        window.location = "/product/files";
                        // Kullanıcı dosyalarım sayfasına yönlendirilir
                    }
                })
            });
        })
    </script>




    @await RenderSectionAsync("Scripts", required: false)


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>